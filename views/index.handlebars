<div class = "row">
	<div class = "col-md-1">
		<!--Since Offsetting wasn't working for some reason-->
	</div>
	<div class = "col-md-5">
		<h2>Burgers to Eat</h2>
		<ul class = "list-group">
			{{#each hamburgers}}
				{{#unless this.devoured}}
				<li class = "list-group-item"> {{burger_name}} 
					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="eaten" value="true">
						<button type="submit">Devour Burger!</button>
					</form>

				</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class = "col-md-5">
		<h2>Burgers already Eaten!</h2>
		<ul class = "list-group">
			{{#each hamburgers}}
				{{#if this.devoured}}
					<li class = "list-group-item">{{burger_name}}</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>